# Desafio 11: Lista de Tarefas no Console

def mostrar_tarefas(tarefas: list):
    if not tarefas:
        print("ğŸ“‚ Nenhuma tarefa cadastrada.")
    else:
        print("\nğŸ“Œ Lista de tarefas:")
        for i, t in enumerate(tarefas, start=1):
            print(f"{i}. {t}")

tarefas = []
print("=== Lista de Tarefas ===")

while True:
    print("\nMenu:")
    print("1 - Adicionar tarefa")
    print("2 - Listar tarefas")
    print("3 - Remover tarefa")
    print("4 - Marcar tarefa como concluÃ­da")
    print("5 - Sair")

    opcao = input("Escolha: ")

    if opcao == "1":
        tarefa = input("Digite a nova tarefa: ")
        tarefas.append(tarefa)
        print("âœ… Tarefa adicionada.")
    elif opcao == "2":
        mostrar_tarefas(tarefas)
    elif opcao == "3":
        mostrar_tarefas(tarefas)
        try:
            idx = int(input("Digite o nÃºmero da tarefa para remover: ")) - 1
            if 0 <= idx < len(tarefas):
                removida = tarefas.pop(idx)
                print(f"âŒ Tarefa removida: {removida}")
            else:
                print("âš ï¸ NÃºmero invÃ¡lido.")
        except ValueError:
            print("âš ï¸ Digite um nÃºmero vÃ¡lido.")
    elif opcao == "4":
        mostrar_tarefas(tarefas)
        try:
            idx = int(input("Digite o nÃºmero da tarefa concluÃ­da: ")) - 1
            if 0 <= idx < len(tarefas):
                tarefas[idx] = "[âœ”] " + tarefas[idx]
                print("ğŸ† Tarefa concluÃ­da!")
            else:
                print("âš ï¸ NÃºmero invÃ¡lido.")
        except ValueError:
            print("âš ï¸ Digite um nÃºmero vÃ¡lido.")
    elif opcao == "5":
        print("ğŸ‘‹ Programa encerrado.")
        break
    else:
        print("âš ï¸ OpÃ§Ã£o invÃ¡lida!")
