# Desafio 02: Contador Simples

def mostrar_menu():
    print("\n=== Menu do Contador ===")
    print("â• '+' â†’ incrementar")
    print("â– '-' â†’ decrementar")
    print("ğŸ”„ 'reset' â†’ voltar a 0")
    print("âœ– 'dobrar' â†’ multiplicar por 2")
    print("ğŸšª 'sair' â†’ encerrar")

contador = 0
print("=== Contador Simples ===")
mostrar_menu()

while True:
    comando = input("\nDigite um comando: ").strip().lower()

    if comando == "+":
        contador += 1
    elif comando == "-":
        contador -= 1
    elif comando == "reset":
        contador = 0
    elif comando == "dobrar":
        contador *= 2
    elif comando == "sair":
        print("ğŸ‘‹ Encerrando o programa. AtÃ© mais!")
        break
    else:
        print("âš ï¸ Comando invÃ¡lido!")
        mostrar_menu()
        continue

    print(f"ğŸ“Š Valor atual do contador: {contador}")
