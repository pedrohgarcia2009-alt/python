# Desafio 08: Tabuada Interativa

def mostrar_tabuada(n: int):
    print(f"\nğŸ“˜ Tabuada do {n}:")
    for i in range(1, 11):
        print(f"{n} x {i} = {n * i}")

print("=== Tabuada Interativa ===")
while True:
    try:
        numero = int(input("\nDigite um nÃºmero para ver a tabuada: "))
        mostrar_tabuada(numero)
    except ValueError:
        print("âš ï¸ Digite um nÃºmero vÃ¡lido!")
        continue

    if input("\nDeseja ver outra tabuada? (s/n): ").lower().startswith("n"):
        print("ğŸ‘‹ Encerrado.")
        break
