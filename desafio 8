# Desafio 08: Tabuada Interativa

def mostrar_tabuada(n: int):
    print(f"\n📘 Tabuada do {n}:")
    for i in range(1, 11):
        print(f"{n} x {i} = {n * i}")

print("=== Tabuada Interativa ===")
while True:
    try:
        numero = int(input("\nDigite um número para ver a tabuada: "))
        mostrar_tabuada(numero)
    except ValueError:
        print("⚠️ Digite um número válido!")
        continue

    if input("\nDeseja ver outra tabuada? (s/n): ").lower().startswith("n"):
        print("👋 Encerrado.")
        break
