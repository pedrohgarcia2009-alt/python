# Desafio 03: Adivinhe o Número
import random

def jogar_adivinhacao():
    numero_secreto = random.randint(1, 100)
    tentativas = 10

    print("=== Jogo: Adivinhe o Número ===")
    print("🎲 O computador pensou em um número entre 1 e 100.")
    print(f"Você tem {tentativas} tentativas para acertar!")

    while tentativas > 0:
        try:
            palpite = int(input("\nSeu palpite: "))
        except ValueError:
            print("⚠️ Entrada inválida! Digite apenas números.")
            continue

        if palpite == numero_secreto:
            print(f"🎉 Parabéns! Você acertou, o número era {numero_secreto}.")
            return
        elif palpite < numero_secreto:
            print("📉 Muito baixo!")
        else:
            print("📈 Muito alto!")

        tentativas -= 1
        print(f"⏳ Tentativas restantes: {tentativas}")

    print(f"\n❌ Fim de jogo! O número era {numero_secreto}.")

jogar_adivinhacao()

