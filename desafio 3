# Desafio 03: Adivinhe o NÃºmero
import random

def jogar_adivinhacao():
    numero_secreto = random.randint(1, 100)
    tentativas = 10

    print("=== Jogo: Adivinhe o NÃºmero ===")
    print("ğŸ² O computador pensou em um nÃºmero entre 1 e 100.")
    print(f"VocÃª tem {tentativas} tentativas para acertar!")

    while tentativas > 0:
        try:
            palpite = int(input("\nSeu palpite: "))
        except ValueError:
            print("âš ï¸ Entrada invÃ¡lida! Digite apenas nÃºmeros.")
            continue

        if palpite == numero_secreto:
            print(f"ğŸ‰ ParabÃ©ns! VocÃª acertou, o nÃºmero era {numero_secreto}.")
            return
        elif palpite < numero_secreto:
            print("ğŸ“‰ Muito baixo!")
        else:
            print("ğŸ“ˆ Muito alto!")

        tentativas -= 1
        print(f"â³ Tentativas restantes: {tentativas}")

    print(f"\nâŒ Fim de jogo! O nÃºmero era {numero_secreto}.")

jogar_adivinhacao()

